{% extends "_layout" %}

{% block content %}

	<div class="section section--default">
		<div class="container">
			<div class="grid">
				<div class="row">
					<div class="col-sm-2">
						<a class="link" href="{{ craft.entries.section('pressOverview').first().getUrl() }}">
							<i class="fas fa-angle-left"></i> &nbsp; terug
						</a>
						<div class="socialShare">
							<p class="share">Deel op</p>
							<hr>
							<ul>
								<li><a class="link" href="#"><i class="fab fa-facebook-f"></i></a></li>
								<li><a class="link" href="#"><i class="fab fa-twitter"></i></a></li>
								<li><a class="link" href="#"><i class="fab fa-linkedin-in"></i></a></li>
							</ul>
						</div>
					</div>
					<div class="col-sm-10">
						<div class="grid">
							<div class="row press--header">
								<div class="col-lg-8">
									<h1 class="press--title">{{ entry.title }}</h1>
								</div>	
								<div class="col-lg-4">
									<p class="news--date">{{ entry.postDate|date('l d F Y'|t) }}</p>
								</div>		
							</div>
						</div>
						<p>{{ entry.intro }}</p>
						{% include '_snippet/_content/_pressBuilder' %}
					</div>
				</div>
			</div>
		</div>
	</div>
	
{% endblock %}