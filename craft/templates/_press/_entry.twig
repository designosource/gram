{% extends "_layout" %}

{% block content %}

	<div class="section section--default">
		<div class="container">
			<div class="grid">
				<div class="row">
					<div class="col-sm-2">
						<a class="link" href="{{ craft.entries.section('pressOverview').first().getUrl() }}">
							<i class="fas fa-angle-left"></i> &nbsp; terug
						</a>
						<div class="socialShare">
							<p class="share">Deel op</p>
							<hr>
							<ul>
								<li>
									<a class="link" href="https://www.facebook.com/dialog/feed?app_id=2093945364223416&display=popup&amp;caption={{ entry.title }}&link={{ entry.getUrl() }}&redirect_uri={{ entry.getUrl() }}" onclick="javascript:window.open(this.href, '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=450,width=600'); return false;" title="Share on Facebook">
										<i class="fab fa-facebook-f"></i>
									</a>
								</li>
								<li>
									<a class="link" href="https://twitter.com/intent/tweet?text={{ entry.title }} -&&url={{ entry.getUrl() }}" onclick="javascript:window.open(this.href, '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=450,width=600'); return false;" title="Share on Twitter">
										<i class="fab fa-twitter"></i>
									</a>
								</li>
								<li>
									<a class="link" href="https://www.linkedin.com/shareArticle?mini=false&url={{ entry.getUrl() }}&title={{ entry.title }}&summary={{ entry.title|striptags }}&source={{ siteName }}" onclick="javascript:window.open(this.href, '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=450,width=600'); return false;" title="Share on LinkedIn">
										<i class="fab fa-linkedin-in"></i>
									</a>
								</li>
							</ul>
						</div>
					</div>
					<div class="col-sm-10">
						<div class="grid">
							<div class="row press--header">
								<div class="col-lg-8">
									<h1 class="press--title">{{ entry.title }}</h1>
								</div>	
								<div class="col-lg-4">
									<p class="news--date">{{ entry.postDate|date('l d F Y'|t) }}</p>
								</div>		
							</div>
						</div>
						<p>{{ entry.intro }}</p>
						{% include '_snippet/_content/_pressBuilder' %}
					</div>
				</div>
			</div>
		</div>
	</div>
	
{% endblock %}